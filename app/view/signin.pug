extends ./layout

block content
    .row
        <form method="POST" action="/user/signin">
            <div class="form-group">
                <label for="name" class="control-label">用户名:</label>
                <input type="text" class="form-control" id="name" name="user[name]" required autocomplete="off" placeholder="Username">
            </div>

            <div class="form-group">
                <label for="password" class="control-label">密码:</label>
                <input type="password" class="form-control" id="password"  name="user[password]" required autocomplete="off" placeholder="Password">
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">登录</button>
            </div>
        </form>
